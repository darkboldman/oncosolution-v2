---
// src/pages/index.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import HeroSlider from '../components/HeroSlider.astro';
import WhatWeDo from '../components/WhatWeDo.astro';
import ProjectHighlights from '../components/ProjectHighlights.astro';
import ServiceHighlights from '../components/ServiceHighlights.astro';
import ClientLogos from '../components/ClientLogos.astro';

// Import other components you'll use on this page

// import FeaturesSection from '../components/FeaturesSection.astro';
---
<BaseLayout title="Home - Onco Solutions" description="Welcome to Onco Solutions Home Page">
   <HeroSlider /> 
   <WhatWeDo />
   <ProjectHighlights />
   <ClientLogos />
   <ServiceHighlights />
   

</BaseLayout>

<style>
    .welcome-section {
        padding: 1rem 0;
        text-align: center;
        background-color: var(--light-bg); /* Light background for this section */
    }
    .welcome-section h1 {
        color: var(--header-light-h1);
        margin-bottom: 1rem;
    }
    .welcome-section p {
        font-size: 1.1rem;
        color: var(--text-color);
        margin-bottom: 0.5rem;
    }
    .welcome-section ul {
        list-style: none;
        padding: 0;
        margin: 1rem 0 2rem 0;
    }
    .welcome-section li {
        margin-bottom: 0.5rem;
        font-weight: bold;
    }
    .cta-button {
        display: inline-block;
        background-color: var(--primary-color);
        color: var(--text-light);
        padding: 0.75rem 1.5rem;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
        transition: background-color 0.3s ease;
    }
    .cta-button:hover {
        background-color: var(--primary-hover);
        color: var(--text-light);
        text-decoration: none;
    }

    .info-section {
        padding: 3rem 0;
        background-color: var(--light-gray); /* Different background for contrast */
    }
    .info-section h2 {
        text-align: center;
        color: var(--dark-blue);
        margin-bottom: 2rem;
    }
    .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 2rem;
    }
    .info-item {
        background-color: #fff; /* White card background */
        padding: 1.5rem;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
    .info-item h3 {
        color: var(--primary-color);
        margin-bottom: 0.75rem;
    }
    .info-item p {
        color: var(--secondary-color);
    }
</style>