const companyName = "ONCOSOLUTIONS"; // Used for alt text and copyright
const companyNameDisplayPart1 = "onco"; // For styling "onco" part
const companyNameDisplayPart2 = "solutions"; // For styling "solutions" part
const companySubtext = "Lighting & automation"; // Subtext for the logo

const companyDescription = "Professional lighting design, automation, and integration services for residential, hospitality, commercial, and industrial spaces.";

const socialMediaLinks = [
  { name: 'Facebook', icon: svgFacebook, url: '#' },
  { name: 'Twitter', icon: svgTwitter, url: '#' },
  { name: 'Instagram', icon: svgInstagram, url: '#' },
  { name: 'LinkedIn', icon: svgLinkedIn, url: '#' },
];

const quickLinks = [
  { text: 'HOME', url: '/' },
  { text: 'PRODUCTS', url: '/products' },
  { text: 'PROJECTS', url: '/projects' },
  { text: 'SERVICES', url: '/services' },
  { text: 'BLOG', url: '/blog' },
  { text: 'CONTACT', url: '/contact' },
];

const servicesLinks = [
  { text: "Lighting Design", url: "/services/lighting-design" },
  { text: "Automation Systems", url: "/services/automation-systems" },
  { text: "Audio Visual Solutions", url: "/services/audio-visual" },
  { text: "LED Solutions", url: "/services/led-solutions" },
  { text: "Installation Services", url: "/services/installation" },
];

const currentYear = new Date().getFullYear();
const footerLogoImagePath = "/src/assets/images/logo/onco-globe-only.png"; // Path to your globe icon in public folder
---
<footer class="site-footer">
  <div class="footer-main">
    <div class="container footer-grid">
      <div class="footer-column about-column">
        <a href="/" class="footer-logo-container">
          <img src={footerLogoImagePath} alt="Onco Globe Logo" class="footer-logo-icon" />
          <div class="footer-logo-text-wrapper">
            <span class="footer-logo-text-main">
              <span class="footer-onco-logo">{companyNameDisplayPart1}</span>{companyNameDisplayPart2}
            </span>
            <span class="footer-logo-text-sub">{companySubtext}</span>
          </div>
        </a>
        <p class="company-description">{companyDescription}</p>
        <div class="footer-social-icons">
          {socialMediaLinks.map(social => (
            <a href={social.url} aria-label={social.name} class="social-icon-link" target="_blank" rel="noopener noreferrer" set:html={social.icon}></a>
          ))}
        </div>
      </div>

      <div class="footer-column links-column">
        <h4 class="footer-heading"><span>Quick Links</span></h4>
        <ul class="footer-links-list">
          {quickLinks.map(link => (
            <li><a href={link.url}>{link.text}</a></li>
          ))}
        </ul>
      </div>

      <div class="footer-column links-column">
        <h4 class="footer-heading"><span>Services</span></h4>
        <ul class="footer-links-list">
          {servicesLinks.map(link => (
            <li><a href={link.url}>{link.text}</a></li>
          ))}
        </ul>
      </div>

      <div class="footer-column contact-column">
        <h4 class="footer-heading"><span>Contact Us</span></h4>
        <address>
          B5/GF/1, GHS<br />
          Jalthara, Hanwella 10650<br />
          Sri Lanka
        </address>
        <p><a href="tel:+94114330388" class="contact-link">+94 114 330 388</a></p>
        <p><a href="tel:+94773285033" class="contact-link">+94 773 285 033</a></p>
        <p><a href="https://wa.me/+94773285033" target="_blank" rel="noopener noreferrer" class="contact-link whatsapp-footer-link">
          <img src="/images/logo/whatsapp.svg" alt="WhatsApp" class="whatsapp-icon-footer" />
        </a></p>
        <p><a href="mailto:info@onco.lk" class="contact-link">info@onco.lk</a></p>
        <p><a href="mailto:sales@onco.lk" class="contact-link">sales@onco.lk</a></p>
      </div>
    </div>
  </div>
  <div class="footer-bottom">
    <div class="container">
      <p>&copy; 2009 - {currentYear} {companyName} (Pvt) Ltd. <br>All rights reserved.</p>
    </div>
  </div>
</footer>

<style>
  /* Assuming :root variables are in your global.css */
  footer {
  width: 100%;
  max-width: 100%;
  box-sizing: border-box;
  overflow-x: hidden;
}

/* Make sure all footer content containers respect boundaries */
footer > div {
  width: 100%;
  max-width: 100%;
  box-sizing: border-box;
}
  .site-footer {
    background-color: var(--dark-blue);
    color: var(--medium-gray);
    font-size: 0.9rem;
  }

  .footer-main {
    padding: 3rem 0;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }
  
  /* Footer Logo Styles - replicating header structure but smaller */
  .footer-logo-container {
    display: flex;
    align-items: center;
    text-decoration: none;
    margin-bottom: 1rem;
  }
  .footer-logo-icon {
    height: 25px; 
    width: auto;
    margin-right: 0.5rem; /* Adjusted margin */
  }
  .footer-logo-text-wrapper {
    display: flex;
    flex-direction: column;
    /* Optional: border-left: 1px var(--secondary-color) solid; */
    /* padding-left: 0.5rem; */ /* Adjusted padding */
  }
  .footer-logo-text-main {
    font-size: 1.1rem; /* Approx 50-60% of header's 1.5rem */
    font-weight: 600;
    text-transform: uppercase;
    color: var(--secondary-color); /* Match header style */
    line-height: 1.1;
  }
  .footer-logo-text-main .footer-onco-logo { /* Specific styling for "onco" part */
    color: var(--primary-color); /* Match header style */
  }
  .footer-logo-text-sub {
    font-size: 0.5rem; /* Approx 50-60% of header's 0.7rem, ensure readability */
    color: var(--secondary-color);
    text-transform: uppercase;
    letter-spacing: 2.8px; /* Adjusted letter spacing */
    line-height: 1;
  }
  /* End Footer Logo Styles */

  .company-description {
    line-height: 1.6;
    margin-bottom: 1.5rem;
    color: var(--light-gray);
  }

  .footer-social-icons {
    display: flex;
    gap: 0.75rem;
  }
  .social-icon-link {
    color: var(--medium-gray);
    font-size: 1.3rem;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 36px; 
    height: 36px;
    transition: color 0.3s ease;
  }
  .social-icon-link svg {
    width: 1em; 
    height: 1em;
    fill: currentColor;
  }
  .social-icon-link:hover {
    color: var(--primary-color);
  }

  .footer-heading {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--text-light); 
    margin-bottom: 1.25rem; 
    text-transform: uppercase;
    letter-spacing: 0.5px;
    position: relative; 
    display: inline-block; 
  }
  .footer-heading span { 
    position: relative;
    padding-bottom: 0.35rem; 
  }
  .footer-heading span::after { /* Underline for headings */
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 30px; 
    height: 3px;  
    background-color: var(--primary-color); 
  }

  .footer-links-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .footer-links-list li {
    margin-bottom: 0.6rem;
  }
  .footer-links-list a {
    color: var(--medium-gray);
    text-decoration: none;
    transition: color 0.3s ease;
  }
  .footer-links-list a:hover {
    color: var(--primary-color);
    text-decoration: underline;
  }

  .contact-column address,
  .contact-column p {
    margin-bottom: 0.6rem;
    line-height: 1.6;
  }
  .contact-link {
    color: var(--medium-gray);
    text-decoration: none;
    transition: color 0.3s ease;
  }
  .contact-link:hover {
    color: var(--primary-color);
    text-decoration: underline;
  }
  .whatsapp-footer-link {
    display: inline-flex;
    align-items: center;
  }
  .whatsapp-icon-footer {
    margin-right: 0.4rem;
  }

  .footer-bottom {
    background-color: rgba(0,0,0,0.1); 
    padding: 1rem 0;
    text-align: center;
    font-size: 0.85rem;
    border-top: 1px solid rgba(var(--medium-gray-rgb, 221, 221, 221), 0.1); 
  }
  .footer-bottom p {
    margin: 0;
    color: var(--light-gray);
  }

  @media (max-width: 768px) {
    .footer-grid {
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); 
      gap: 1.5rem;
    }
    .footer-main {
      padding: 2rem 0;
    }
    .footer-heading {
      font-size: 1rem;
    }
    .footer-logo-container { /* Changed from .footer-logo-link to target the container */
        justify-content: center; 
    }
    .about-column {
        text-align: center; 
    }
    .footer-social-icons {
        justify-content: center;
    }
  }
  @media (max-width: 480px) {
    .footer-grid {
      grid-template-columns: 1fr; 
      text-align: center;
    }
    .footer-heading span::after { 
        left: 50%;
        transform: translateX(-50%);
    }
    .footer-links-list {
        text-align: center;
    }
    .contact-column address, .contact-column p {
        text-align: center;
    }
    .whatsapp-footer-link {
        justify-content: center;
    }
  }
</style>
